<h1>Orders</h1>
  <% @user = User.find(current_user.id)%>

<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% totalOrders = 0 %>
    <% @orders.each do |order| %>
    
  <% if order.user.email == @user.email %>
  
    <% totalOrders += 1 %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
    <% end %>
    
    <% if totalOrders == 0 %>
    <tr>
      <td colspan="3">No orders to display</td>
    </tr>
    <% end %>
  </tbody>
</table>
