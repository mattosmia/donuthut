<h1>Searching for: "<%= @search_term %>"</h1>

<% if @items.length == 0  %>
<p class="centred">No products were found to match your search</p>
<% else %>


<table class="catalog">
  <% @items.each do |item| %>
      <tr>
        <td>
          <div class="image">
            <%= link_to (image_tag item.image_url, :style => "height:100px"), item %>
          </div>
          <div class="title">
            <%= link_to item.title, item %>
          </div>
          <div class="description">
            <%= item.description %>
          </div>  
          <div class="price">
             <%= number_to_currency(item.price, :unit => "â‚¬") %>
          </div>
          <div class="links">
            
              <a href="/cart/<%= item.id %>">Add to Cart</a>
        </div>
        </td>
      </tr>
    <% end %>
</table>
<% end %>
