<% if user_signed_in? && current_user.admin? %>
    Admin actions: <%= link_to 'Add new item', new_item_path %>
<% end %>
<h1><%= @category_title %></h1>
<% if @items.length == 0 %>

    <p class="centred">No products to display.</p>
<% else %>
    <div class="itemsContainer">
    <% @items.each do |item| %>
    
        <div class="itemhols">
        <h2><%= item.title %><% if user_signed_in? && current_user.admin? %><a href="/items/<%= item.id %>/edit" class="">(Edit)</a><% end %></h2>
    
        <%= link_to (image_tag item.image_url, :class => "itemholsIm"), item %>
    
        <p><%= item.description %></p>
        <p><%= number_to_currency(item.price, :unit => "â‚¬") %></p>
        
        <p><%= link_to 'Show',  item, :class => "button", :role => "button" %>
        <a href="/cart/<%= item.id %>" class="button">Add to cart</a></p>
        
        </div>
    <% end %>
    </div>

<% end %>