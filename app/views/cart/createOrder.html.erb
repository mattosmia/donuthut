<h1>Order confirmation</h1>

<div id="itemsContainer">
    <p>Thank you for placing your order with DonutHut!</p>
</div>

<table id="customers">
    <tr>
         
        <% @orders.limit(1).order(id: :desc).each do |order| %>
       <td>Order reference for the order you just placed is OrderNumber: <b><%= order.id %></b></td>
        <% end %>
    </tr>
</table>    
    
    
<table id="customers">
     <% @total = 0 %>
    <% @orderitems.each do |id,quantity| %>
      <tr>
        <% item = Orderitem.find_by_id(id) %>
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
       <td><%=number_to_currency(item.price, :unit => "€")%></td> 
       <td><%= number_to_currency(item.quantity * item.price, :unit => "€") %></td>
       </tr>
       
       <% timx = (item.quantity * item.price)%> 
       <% @total += timx %>
      
      </tr>
    <% end %>
    
    
    <tr>
       <td>Order Total: &euro; <%= @total %></td>
      </tr>
</table>

       